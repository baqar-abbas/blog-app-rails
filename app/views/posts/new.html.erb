<h1 class="form-title">New Post</h1>

<%= form_with(model: @post, url: user_posts_path(@current_user), local: true, html: { class: "post-form" }) do |f| %>
  <div class="form-field">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-input" %>
  </div>
  <div class="form-field">
    <%= f.label :text, class: "form-label" %>
    <%= f.text_area :text, size: "70x5", class: "form-textarea" %>
  </div>
  <br>
  <div class="form-submit">
    <%= f.submit "Create Post", class: "submit-button" %>
  </div>
<% end %>
